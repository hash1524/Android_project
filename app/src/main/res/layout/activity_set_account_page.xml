<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".SetAccountPage">
    <ImageView
        android:id="@+id/info1"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/info1" />
    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_below="@+id/info1"
        android:textColorHint="#83FFFFFF"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:importantForAutofill="no"
        />
    <EditText
        android:id="@+id/email"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_below="@+id/name"
        android:textColorHint="#83FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:importantForAutofill="no"
        />
    <EditText
        android:id="@+id/username1"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="UserName"
        android:layout_below="@+id/email"
        android:textColorHint="#83FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:importantForAutofill="no"
        />
    <EditText
        android:id="@+id/passSet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/username1"
        android:textColorHint="#83FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:importantForAutofill="no"
        />
    <EditText
        android:id="@+id/passRetyp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Retype Password"
        android:layout_below="@+id/passSet"
        android:textColorHint="#83FFFFFF"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:importantForAutofill="no"
        />
    <Button
        android:id="@+id/create"
        android:layout_centerHorizontal="true"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_below="@id/passRetyp"
        android:backgroundTint="@color/shadowfight2"
        android:text="CREATE"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/tologin"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/create"
        android:backgroundTint="@color/shadowfight2"
        android:text="Go To Login"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="00dp"
        />
</RelativeLayout>